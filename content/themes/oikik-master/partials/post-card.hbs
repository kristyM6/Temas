<div class="post-card-container">
    
    <a href="{{url}}" >
        <div class="row next">
            <div class="col-md-4">
                <img class="img-thumbnail" src="{{feature_image}}" alt="">
            </div>
            <div class="col-md-8 next-post">
                <h2>{{title}}</h2>
                <p>{{excerpt words="15"}} ... </p>
                <div class="time-post">
                    <i class="fa fa-calendar-o" aria-hidden="true"></i>
                    <time class="post-date" datetime="{{date format='YYYY-MMM-DD'}}">{{date format="DD MMM YYYY"}}</time>
                </div>
            </div>
        </div>
    </a>
   
</div>